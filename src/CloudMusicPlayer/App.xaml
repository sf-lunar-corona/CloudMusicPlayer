<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CloudMusicPlayer"
             xmlns:converters="clr-namespace:CloudMusicPlayer.Converters"
             x:Class="CloudMusicPlayer.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:TimeSpanToStringConverter x:Key="TimeSpanToStringConverter" />
            <converters:FileSizeConverter x:Key="FileSizeConverter" />
            <converters:PlayPauseConverter x:Key="PlayPauseConverter" />
            <converters:FavoriteIconConverter x:Key="FavoriteIconConverter" />
            <converters:FavoriteColorConverter x:Key="FavoriteColorConverter" />
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:ShuffleColorConverter x:Key="ShuffleColorConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
