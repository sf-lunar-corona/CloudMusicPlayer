<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CloudMusicPlayer.ViewModels"
             xmlns:models="clr-namespace:CloudMusicPlayer.Models"
             x:Class="CloudMusicPlayer.Views.AlbumDetailPage"
             x:DataType="vm:AlbumDetailViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" Padding="15,10" ColumnDefinitions="*,Auto,Auto" BackgroundColor="{AppThemeBinding Light=#F8F8FF, Dark=#1A1A2E}">
            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                <Label Text="{Binding AlbumName}" FontSize="22" FontAttributes="Bold" />
                <Label Text="{Binding ArtistName}" FontSize="14" TextColor="Gray" />
                <Label Text="{Binding TrackCount, StringFormat='{0} tracks'}" FontSize="13" TextColor="Gray" />
            </VerticalStackLayout>
            <Button Grid.Column="1"
                    Text="â–¶ Play"
                    Command="{Binding PlayAllCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="20"
                    FontSize="13"
                    HeightRequest="36"
                    Padding="15,0" />
            <Button Grid.Column="2"
                    Text="ðŸ”€ Shuffle"
                    Command="{Binding ShufflePlayCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource Primary}"
                    BorderColor="{StaticResource Primary}"
                    BorderWidth="1"
                    CornerRadius="20"
                    FontSize="13"
                    HeightRequest="36"
                    Padding="15,0"
                    Margin="10,0,0,0" />
        </Grid>

        <!-- Track List -->
        <CollectionView Grid.Row="1"
                         ItemsSource="{Binding Tracks}"
                         SelectionMode="None">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40" Spacing="10">
                    <Label Text="ðŸŽµ" FontSize="48" HorizontalOptions="Center" />
                    <Label Text="{Binding EmptyMessage}"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           FontSize="14" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AudioTrack">
                    <Grid Padding="15,8" ColumnDefinitions="30,*,Auto" BackgroundColor="Transparent">
                        <Label Grid.Column="0" Text="{Binding TrackNumber}" FontSize="14" TextColor="Gray"
                               VerticalOptions="Center" HorizontalTextAlignment="Center" />
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2" Padding="10,0,0,0">
                            <Label Text="{Binding Title}" FontSize="15" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                            <Label Text="{Binding Artist}" FontSize="12" TextColor="Gray" LineBreakMode="TailTruncation" />
                        </VerticalStackLayout>
                        <Label Grid.Column="2" Text="{Binding DisplayDuration}" FontSize="12" TextColor="Gray" VerticalOptions="Center" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AlbumDetailViewModel}}, Path=PlayTrackCommand}"
                                CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
