<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CloudMusicPlayer.ViewModels"
             xmlns:models="clr-namespace:CloudMusicPlayer.Models"
             x:Class="CloudMusicPlayer.Views.SearchPage"
             x:DataType="vm:SearchViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="0">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search songs, artists, albums..."
                   Text="{Binding SearchQuery}"
                   SearchCommand="{Binding SearchCommand}"
                   Margin="10,10,10,0" />

        <!-- Result Count -->
        <Label Grid.Row="1"
               Text="{Binding ResultCount, StringFormat='{0} results'}"
               FontSize="13"
               TextColor="Gray"
               Margin="15,5,15,5"
               IsVisible="{Binding HasSearched}" />

        <!-- Results -->
        <CollectionView Grid.Row="2"
                         ItemsSource="{Binding Results}"
                         SelectionMode="None">
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40" Spacing="10">
                    <Label Text="ðŸ”" FontSize="48" HorizontalOptions="Center" />
                    <Label Text="{Binding EmptyMessage, FallbackValue='Search for music'}"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           FontSize="14"
                           IsVisible="{Binding HasSearched}" />
                    <Label Text="Search for songs, artists, or albums"
                           HorizontalTextAlignment="Center"
                           TextColor="Gray"
                           FontSize="14"
                           IsVisible="{Binding HasSearched, Converter={StaticResource InverseBoolConverter}}" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AudioTrack">
                    <Grid Padding="15,8" ColumnDefinitions="45,*,Auto" BackgroundColor="Transparent">
                        <Frame Grid.Column="0"
                               WidthRequest="40" HeightRequest="40"
                               CornerRadius="5" Padding="0" IsClippedToBounds="True"
                               BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#333}">
                            <Label Text="ðŸŽµ" FontSize="20" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Frame>
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2" Padding="10,0,0,0">
                            <Label Text="{Binding Title}" FontSize="15" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                            <Label Text="{Binding DisplayInfo}" FontSize="12" TextColor="Gray" LineBreakMode="TailTruncation" />
                        </VerticalStackLayout>
                        <Label Grid.Column="2" Text="{Binding DisplayDuration}" FontSize="12" TextColor="Gray" VerticalOptions="Center" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer
                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SearchViewModel}}, Path=PlayTrackCommand}"
                                CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Loading -->
        <ActivityIndicator Grid.Row="2"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center" />
    </Grid>
</ContentPage>
