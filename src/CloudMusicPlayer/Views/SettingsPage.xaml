<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CloudMusicPlayer.ViewModels"
             x:Class="CloudMusicPlayer.Views.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">
            <!-- Account Section -->
            <Label Text="Account" FontSize="13" FontAttributes="Bold" TextColor="Gray" Margin="15,15,15,5"
                   CharacterSpacing="1" />
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" CornerRadius="10" Margin="15,5" Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding UserName}" FontSize="16" FontAttributes="Bold" />
                    <Label Text="{Binding UserEmail}" FontSize="13" TextColor="Gray" />
                    <Button Text="Sign Out"
                            Command="{Binding SignOutCommand}"
                            BackgroundColor="Transparent"
                            TextColor="Red"
                            FontSize="14"
                            HorizontalOptions="Start"
                            Padding="0"
                            Margin="0,5,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- Storage Section -->
            <Label Text="Storage" FontSize="13" FontAttributes="Bold" TextColor="Gray" Margin="15,20,15,5"
                   CharacterSpacing="1" />
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" CornerRadius="10" Margin="15,5" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Cache Size" FontSize="15" VerticalOptions="Center" />
                        <Label Grid.Column="1" Text="{Binding CacheSizeText}" FontSize="15" TextColor="Gray" />
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Cache Limit" FontSize="15" VerticalOptions="Center" />
                        <Label Grid.Column="1" Text="{Binding CacheSizeLimitText}" FontSize="15" TextColor="{StaticResource Primary}">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ChangeCacheLimitCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                    <Button Text="Clear Cache"
                            Command="{Binding ClearCacheCommand}"
                            BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#333}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            CornerRadius="10"
                            HeightRequest="40" />
                </VerticalStackLayout>
            </Frame>

            <!-- About Section -->
            <Label Text="About" FontSize="13" FontAttributes="Bold" TextColor="Gray" Margin="15,20,15,5"
                   CharacterSpacing="1" />
            <Frame BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" CornerRadius="10" Margin="15,5,15,20" Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Version" FontSize="15" />
                        <Label Grid.Column="1" Text="{Binding AppVersion}" FontSize="15" TextColor="Gray" />
                    </Grid>
                    <Label Text="Cloud Music Player" FontSize="13" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
